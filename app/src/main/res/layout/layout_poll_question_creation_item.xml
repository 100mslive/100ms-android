<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionTypeTitle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Question Type"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/questionTypeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/question_type_options"
            app:layout_constraintLeft_toLeftOf="@id/questionTypeTitle"
            app:layout_constraintTop_toBottomOf="@+id/questionTypeTitle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/askAquestionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/questionTypeSpinner"
            app:layout_constraintTop_toBottomOf="@id/questionTypeSpinner">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/askAQuestionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ask A Question" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/optionsHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="Options"
            app:layout_constraintLeft_toLeftOf="@id/askAquestionLayout"
            app:layout_constraintTop_toBottomOf="@id/askAquestionLayout" />

        <ListView
            android:id="@+id/optionsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/optionsHeading"
            app:layout_constraintTop_toBottomOf="@id/optionsHeading" />

            <TextView
                android:id="@+id/addAnOptionTextView"
                app:layout_constraintTop_toBottomOf="@id/optionsListView"
                app:layout_constraintLeft_toLeftOf="@id/optionsListView"
                android:padding="5dp"
                android:drawableLeft="@drawable/add_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add an option"
                android:drawablePadding="23dp"
                android:gravity="center"
                />
        <ImageButton
            android:id="@+id/deleteOptionTrashButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/delete_trash"
            app:layout_constraintTop_toTopOf="@id/saveButton"
            app:layout_constraintBottom_toBottomOf="@id/saveButton"
            />
        <Button
            android:id="@+id/saveButton"
            android:background="#475366"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addAnOptionTextView"
            app:layout_constraintLeft_toLeftOf="@id/addAnOptionTextView"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>