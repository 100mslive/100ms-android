<!--            android:padding="20dp"-->
<!--            android:src="@drawable/ic_people_24" />-->

<!--        <TextView-->
<!--            android:id="@+id/peer_count"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
