<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:background="@android:color/black"
    tools:context=".ui.diagnostic.fragments.PreCallRegionSelectionFragment">


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:lineHeight="32sp"
        android:text="Pre-call Test"
        android:textAlignment="center"
        android:textSize="24sp"
        app:fontFamily="@font/inter_bold"
        app:layout_constraintBottom_toTopOf="@id/description_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:textColor="@android:color/white" />

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tv"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:lineHeight="20sp"
        android:maxLines="2"
        android:text="Make sure your devices and network are good to go, let's get started."
        android:textAlignment="center"
        android:textSize="14sp"
        app:fontFamily="@font/inter_regular"
        app:layout_constraintBottom_toTopOf="@+id/select_region_tv"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        tools:textColor="@android:color/white" />

    <TextView
        android:id="@+id/select_region_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tv"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:lineHeight="20sp"
        android:maxLines="2"
        android:text="Select a region"
        android:textAlignment="center"
        android:textSize="14sp"
        app:fontFamily="@font/inter_regular"
        app:layout_constraintBottom_toTopOf="@id/region_chip_group"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        tools:textColor="@android:color/white" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/region_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/continue_button"
        app:layout_constraintTop_toBottomOf="@id/select_region_tv" />

    <TextView
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Get started ->"
        android:textColor="#EFF0FA"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/region_chip_group" />

</androidx.constraintlayout.widget.ConstraintLayout>