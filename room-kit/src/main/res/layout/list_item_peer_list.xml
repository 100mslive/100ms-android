<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                style="@style/MaterialTextViewHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:textSize="14sp"
                android:textColor="#EFF0FA"
                tools:text="@string/john_doe" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/peerRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_settings_24"
                android:textStyle="bold"
                tools:text="host" />


        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/icon_screen_share"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:contentDescription="@string/screen_share"
            android:src="@drawable/ic_mobile_screen_share_24"
             />

        <ImageView
            android:id="@+id/icon_video_off"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/video_status"
            android:src="@drawable/ic_videocam_off_24" />

        <ImageView
            android:id="@+id/icon_audio_off"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/audio_status"
            android:src="@drawable/ic_mic_off_24"
             />

        <ImageButton
            android:id="@+id/peerSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_more_vert_24" />


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_line_vertical_divider" />

</LinearLayout>