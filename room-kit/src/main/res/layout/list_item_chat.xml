<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_d1">

    <View
        android:id="@+id/blue_bar"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp"
        app:fontFamily="@font/inter_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/john_doe" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:maxLines="1"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textSize="12sp"
        app:fontFamily="@font/inter_regular"
        app:layout_constraintBaseline_toBaselineOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/name"
        tools:text="2:13 pm" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sentBackground"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/spacing_d1"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        app:contentPadding="@dimen/four_dp"
        app:layout_constraintBaseline_toBaselineOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/viewMore"
        >
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/toGroup"
        app:layout_constraintBaseline_toBaselineOf="@id/sentTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:lineHeight="16px"
        android:maxLines="1"
        android:singleLine="true"
        android:text="To Group"
        android:textSize="12sp"
        app:fontFamily="@font/inter_regular"
        app:layout_constraintEnd_toStartOf="@id/sentTo"
        tools:layout_editor_absoluteY="2dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sentTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:lineHeight="16px"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="12sp"
        app:fontFamily="@font/inter_regular"
        app:layout_constraintBaseline_toBaselineOf="@id/name"
        app:layout_constraintRight_toLeftOf="@id/viewMore"
        tools:text="Direct Message" />
    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/viewMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@string/view_more"
        android:src="@drawable/chat_view_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoLink="all"
        android:fontFamily="@font/inter_regular"
        android:textIsSelectable="true"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="@string/lorem_ipsum" />

    <ImageButton
        android:id="@+id/message_options_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="showPopup"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
