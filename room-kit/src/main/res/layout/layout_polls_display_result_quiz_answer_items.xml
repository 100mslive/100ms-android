<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/optionText"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:drawablePadding="@dimen/spacing_d1"
        android:lineHeight="20px"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_d2"
        android:layout_marginHorizontal="@dimen/spacing_d2"
        tools:text="Black Bear" />

    <TextView
        android:id="@+id/peopleAnswering"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/inter_regular"
        android:lineHeight="20px"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/spacing_d2"
        android:layout_marginHorizontal="@dimen/spacing_d2"
        tools:text="1 peer" />

</FrameLayout>