<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.media3.ui.PlayerView
        android:id="@+id/hls_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_below="@id/extra_properties"
        android:id="@+id/stats_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/stats_view"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bandwidth " />

            <TextView
                android:id="@+id/bandwidth_estimate_tv"
                android:layout_width="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Network Activity " />


            <TextView
                android:id="@+id/network_activity_tv"
                android:layout_width="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/extra_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|end"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_track_selection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:fontFamily="@font/inter_semibold"
            android:src="@drawable/settings_icon"
            android:text="Settings"
            android:textAllCaps="false" />
<Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_seek_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_blue_round_drawable"
            android:fontFamily="@font/inter_semibold"
            android:text="Live"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/hlsCues"
        android:textSize="12pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hls Text"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_message"
            style="@style/TextInputLayout"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            android:minHeight="24dp"
            android:textColor="#8F9099"
            android:background="@drawable/send_message_background"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="Send Messages to Everyone"
            android:padding="8dp"
            app:endIconDrawable="@drawable/send_message"
            app:endIconMode="custom" />


        <ImageView
            android:id="@+id/icon_send"
            android:layout_width="18dp"
            android:layout_margin="8dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:src="@drawable/send_icon" />

    </LinearLayout>



</RelativeLayout>