<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Player view -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/hls_view"
        app:use_controller="false"
        app:resize_mode="zoom"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Stats for nerds -->
    <LinearLayout
        android:layout_below="@id/extra_properties"
        android:id="@+id/stats_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/stats_view"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bandwidth " />

            <TextView
                android:id="@+id/bandwidth_estimate_tv"
                android:layout_width="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Network Activity " />


            <TextView
                android:id="@+id/network_activity_tv"
                android:layout_width="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Goto live and track selector -->
    <LinearLayout
        android:id="@+id/extra_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|end"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_track_selection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:fontFamily="@font/inter_semibold"
            android:src="@drawable/settings_icon"
            android:text="Settings"
            android:textAllCaps="false" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_seek_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_blue_round_drawable"
            android:fontFamily="@font/inter_semibold"
            android:text="Live"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- To show timed metadata -->
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/hlsCues"
        android:visibility="gone"
        android:textSize="12pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hls Text"
        />

    <live.hms.roomkit.ui.meeting.chat.SingleSideFadeRecyclerview
        android:id="@+id/chatMessages"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:paddingHorizontal="@dimen/spacing_d1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:listitem="@layout/list_item_chat"
        android:layout_above="@+id/chatView"
        />

    <RelativeLayout
        android:id="@+id/chatView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/edit_text_message"
            style="@style/TextInputLayout"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@id/icon_send"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            android:minHeight="24dp"
            android:layout_height="wrap_content"
            android:hint="@string/send_messages_to_everyone"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="8dp" />


        <ImageView
            android:id="@+id/icon_send"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_alignTop="@id/edit_text_message"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/edit_text_message"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/send_icon" />

    </RelativeLayout>


</RelativeLayout>