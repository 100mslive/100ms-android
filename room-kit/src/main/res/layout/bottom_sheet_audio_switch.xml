<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/audio_ot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="8dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Audio Output"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginEnd="16dp"
                android:elevation="3dp"
                android:src="@drawable/ic_close_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </FrameLayout>


        <View
            android:id="@+id/border5"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/gray_line_vertical_divider" />

        <TextView
            android:id="@+id/earpiece_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="Earpiece"
            android:visibility="gone" />


        <View
            android:id="@+id/border4"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/gray_line_vertical_divider" />


        <TextView
            android:id="@+id/speaker_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_icon_speaker"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="Speaker"
            android:visibility="gone" />


        <View
            android:id="@+id/border3"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/gray_line_vertical_divider"
            android:fontFamily="@font/inter_semibold" />


        <TextView
            android:id="@+id/bluetooth_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/bt"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="Bluetooth"
            android:visibility="gone" />


        <View
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/gray_line_vertical_divider"
            android:visibility="gone" />


        <TextView
            android:id="@+id/wired_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/wired"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="Wired Headset"
            android:visibility="gone" />


        <View
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/gray_line_vertical_divider" />


        <TextView
            android:id="@+id/mute_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_volume_mute_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="Mute"
            android:visibility="gone" />


    </LinearLayout>

</FrameLayout>
