<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="top"
        android:lineSpacingExtra="3sp"
        android:textAppearance="@style/poll_display_answer_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Carrots" />

    <TextView
        android:id="@+id/totalVotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_d2"
        android:gravity="top"
        android:lineSpacingExtra="3sp"
        android:textAppearance="@style/poll_display_answer_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="23" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/questionProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_d1"
        android:layout_marginHorizontal="@dimen/spacing_d2"
        android:layout_weight="1"
        android:maxHeight="8dp"
        android:progressBackgroundTint="#2C333F"
        android:progressTint="#2672ED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer"
        tools:progress="50" />


</androidx.constraintlayout.widget.ConstraintLayout>