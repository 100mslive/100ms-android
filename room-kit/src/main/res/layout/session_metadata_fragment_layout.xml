<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/standardBottomSheet"
    style="?attr/bottomSheetStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:padding="8dp"
            android:text="Change Metadata"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/metadataKey"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:hint="Key"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/gray_round_drawable"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/metadataValue"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:hint="Value"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/gray_round_drawable"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_round_stroked_drawable"
                android:fontFamily="@font/inter_semibold"
                android:paddingHorizontal="30dp"
                android:text="Cancel" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_name_change_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_blue_round_drawable"
                android:fontFamily="@font/inter_semibold"
                android:paddingHorizontal="30dp"
                android:text="Change" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:padding="8dp"
            android:text="Observe Values"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/observeKey"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:hint="Key"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/gray_round_drawable"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_observe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_round_stroked_drawable"
                android:fontFamily="@font/inter_semibold"
                android:paddingHorizontal="30dp"
                android:text="Cancel" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_observer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_blue_round_drawable"
                android:fontFamily="@font/inter_semibold"
                android:paddingHorizontal="30dp"
                android:text="Observe" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:padding="8dp"
            android:text="Current Vals"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/currentValues"
            tools:text="Hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>