<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:drawable="@drawable/polls_blue_button_shape" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:drawable="@drawable/polls_blue_button_shape" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:drawable="@drawable/polls_blue_button_shape" />
    <!--Default Background Color -->
    <item android:color="#2672ED" />
</selector>
